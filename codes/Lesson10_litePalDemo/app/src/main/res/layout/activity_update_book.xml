<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddBookActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请输入要更新的图书名"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/toUpdateNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请输入需要更新的内容"
        android:textSize="24sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:text="书名"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/nameUpdateEt"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="作者"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/authorUpdateEt"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="出版社"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/pressUpdateEt"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="价格"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/priceUpdateEt"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/confirmUpdateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认更新"
        android:textSize="24sp" />

</LinearLayout>